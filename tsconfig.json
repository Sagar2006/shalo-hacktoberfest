{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "@my-monorepo/*": ["my-monorepo/packages/*/src"]
      },
      "strict": true,
      "esModuleInterop": true,
      "declaration": true,
      "composite": true
    },
    "include": [
      "src/**/*",
      "my-monorepo/packages/*/src/**/*"
    ],
    "exclude": ["node_modules", "dist"]
}